# ls modifiers
alias ls='ls --color=auto'
alias l='ls'
alias ll='ls -l'
alias la='ls -a'

# less
alias less='less -r'

# cd aliases
alias ..='cd ..'

ANDREW=/cygdrive/c/Users/Andrew
WINHOME=$ANDREW/home
DOWN=$ANDREW/Downloads
ONEDRIVE=$WINHOME/OneDrive
DROPBOX=$WINHOME/Dropbox
DUMP=$DROPBOX/dump
SOPHS=$DROPBOX/school/sophs

alias cdown='cd $DOWN'
alias chome='cd $WINHOME'
alias cone='cd $ONEDRIVE'
alias cdrop='cd $DROPBOX'
alias cdump='cd $DROPBOX/dump'
alias ccode='cd $DROPBOX/code/'
alias cweb='cd $DROPBOX/code/web'
alias csophf='cd $DROPBOX/school/sophf'
alias csophs='cd $DROPBOX/school/sophs'
alias c122='cd $DROPBOX/school/freshf/15122'
alias c150='cd $DROPBOX/school/freshs/15150'
alias c213='cd $DROPBOX/school/freshs/15213'
alias c251='cd $DROPBOX/school/sophf/15251'
alias c210='cd $DROPBOX/school/sophs/15210'
alias c112='cd $DROPBOX/school/sophs/15112ta'
alias c295='cd $DROPBOX/school/sophs/15295'

# grep aliases
alias grep='grep --color'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# gcc aliases
alias gcco='gcc -Wall -Werror -Wextra -std=c99 -pedantic'
alias gccd='gcco -DDEBUG -g'

# ssh/scp aliases
alias shadb='ssh adbenson@linux.andrew.cmu.edu'
alias shxdb='ssh -X adbenson@linux.andrew.cmu.edu'
alias sshark='ssh adbenson@shark.ics.cs.cmu.edu'
alias scpwww='scp -r $DROPBOX/code/web/afs/* adbenson@linux.andrew.cmu.edu:~/www'

# clipboard
alias copy='echo > /dev/clipboard'
alias paste='cat /dev/clipboard'

# kerberos
alias kadb='kinit adbenson'

# programs
alias npp='notepad++'
alias subl='sublime_text'
alias atom='atom.cmd'
alias apm='apm.cmd'
alias em='emacs'
alias open='cygstart'
alias coin='rlwrap coin'
alias sml='rlwrap sml'
alias gdb='rlwrap gdb'
alias python='rlwrap python'
alias python3='rlwrap python3'

# andrew web publishing
